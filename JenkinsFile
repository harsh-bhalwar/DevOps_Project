pipeline {
  agent any

  parameters {
    booleanParam(name: 'PUSH_TO_DOCKERHUB', defaultValue: true, description: 'Push built image to DockerHub?')
    string(name: 'DOCKERHUB_REPO', defaultValue: 'bhawarharsh/devops_project', description: 'DockerHub repo name (user/repo)')
  }

  environment {
    IMAGE_NAME = "${params.DOCKERHUB_REPO}"
    // IMAGE_TAG = "jenkins-${env.BUILD_NUMBER}"
    IMAGE_TAG = "jenkins-4"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install & Test') {
      steps {
        // explicitly add node path
                sh '''
                    export PATH=$PATH:/opt/homebrew/bin
                    node -v
                    npm -v
                    npm ci
                    npm test || echo "No tests found"
                '''
      }
      post {
        always {
          // publish test results (Jest produced test-results/junit.xml)
          junit allowEmptyResults: true, testResults: 'test-results/junit.xml'
        }
      }
    }

    stage('Build Docker Image') {
    steps {
        sh '''
            export PATH=$PATH:/opt/homebrew/bin:/usr/local/bin
            docker -v

            echo "üê≥ Building multi-arch image for linux/amd64 and linux/arm64..."
            docker buildx create --use || true
            docker buildx build \
              --platform linux/amd64,linux/arm64 \
              -t bhawarharsh/devops_project:jenkins-4 \
              .
        '''
    }
}

    stage('Push to DockerHub') {
        when {
            expression { return params.PUSH_TO_DOCKERHUB == true }
        }
        steps {
            withCredentials([usernamePassword(credentialsId: 'docker-pat', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
            sh '''
                export PATH=$PATH:/usr/local/bin

                echo "üõ†Ô∏è Checking Docker installation..."
                docker -v || { echo "‚ùå Docker not found! Check PATH or permissions."; exit 1; }

                echo "üîê Logging into DockerHub..."
                echo "$DOCKERHUB_PASS" | docker login -u "$DOCKERHUB_USER" --password-stdin

                echo "üèóÔ∏è Tagging image before push..."
                docker tag bhawarharsh/devops_project:jenkins-4 ${IMAGE_NAME}:${IMAGE_TAG}

                echo "üöÄ Pushing image to DockerHub..."
                docker push ${IMAGE_NAME}:${IMAGE_TAG}

                echo "üîí Logging out of DockerHub..."
                docker logout
            '''
            }
        }
}


    stage('Deploy (local)') {
    steps {
        sh '''
            # Ensure Jenkins can find Docker (Homebrew and default locations)
            export PATH=$PATH:/opt/homebrew/bin:/usr/local/bin

            echo "üõ†Ô∏è Checking Docker installation..."
            docker -v || { echo "‚ùå Docker not found! Check PATH or permissions."; exit 1; }

            echo "üßπ Stopping and removing any old container..."
            docker stop devops_project || true
            docker rm devops_project || true

            echo "üöÄ Deploying new container..."
            docker run -d --name devops_project -p 80:3000 ${IMAGE_NAME}:${IMAGE_TAG}

            echo "‚úÖ Deployment complete! Application running on http://localhost:80"
        '''
    }
}

  }

  post {
    success {
      echo "Pipeline succeeded. App should be reachable at http://localhost (port 80)"
    }
    failure {
      echo "Pipeline failed."
    }
  }
}
